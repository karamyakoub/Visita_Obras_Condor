<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ObraActivity"
    android:id="@+id/obra_layout_master">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:id="@+id/obra_linear_master">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            app:cardElevation="5dp"
            app:cardCornerRadius="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Obra:"
                    android:paddingLeft="5dp"
                    android:textSize="20sp"
                    android:elevation="3dp"
                    android:textColor="@color/colorAccent"
                    android:background="@color/colorPrimary"/>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:counterEnabled="true"
                    app:counterMaxLength="100"
                    app:counterTextColor="@color/colorPrimary"
                    app:errorEnabled="true">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/obra_cliente_editTxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Cliente"/>
                </com.google.android.material.textfield.TextInputLayout>
                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="2"
                    android:rowCount="1">
                    <TextView
                        android:layout_row="0"
                        android:layout_column="0"
                        android:text="UF"
                        android:textSize="16sp"
                        android:paddingLeft="5dp"
                        android:layout_columnWeight="1"
                        android:layout_gravity="center_vertical"/>
                    <Spinner
                        android:id="@+id/obra_uf_spinner"
                        android:layout_row="0"
                        android:layout_column="1"
                        android:layout_columnWeight="2"
                        android:layout_gravity="center_vertical"/>

                </GridLayout>
                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_row="0"
                        android:layout_column="2"
                        android:text="Cidade"
                        android:textSize="16sp"
                        android:paddingLeft="5dp"
                        android:layout_columnWeight="2"
                        android:layout_gravity="center_vertical"/>
                    <Spinner
                        android:id="@+id/obra_cidade_spinner"
                        android:layout_row="0"
                        android:layout_column="3"
                        android:layout_columnWeight="10"
                        android:layout_gravity="center_vertical"/>
                </GridLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:counterEnabled="true"
                    app:counterMaxLength="40"
                    app:counterTextColor="@color/colorPrimary"
                    app:errorEnabled="true">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/obra_bairro_editTxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Bairro"/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:counterEnabled="true"
                    app:counterMaxLength="80"
                    app:counterTextColor="@color/colorPrimary"
                    app:errorEnabled="true">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/obra_endereco_editTxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="EndereÃ§o"/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:counterEnabled="true"
                    app:counterMaxLength="100"
                    app:counterTextColor="@color/colorPrimary"
                    app:errorEnabled="true">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/obra_emprendedor_editTxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Emprendedor"/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:counterEnabled="true"
                    app:counterMaxLength="40"
                    app:counterTextColor="@color/colorPrimary"
                    app:errorEnabled="true">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/obra_amox_editTxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Amox."/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:counterEnabled="true"
                    app:counterMaxLength="40"
                    app:counterTextColor="@color/colorPrimary"
                    app:errorEnabled="true">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/obra_engenherio_editTxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Engenheiro"/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:counterEnabled="true"
                    app:counterMaxLength="12"
                    app:counterTextColor="@color/colorPrimary"
                    app:errorEnabled="true">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/obra_telefone1_editTxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Telefone1"/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:counterEnabled="true"
                    app:counterMaxLength="12"
                    app:counterTextColor="@color/colorPrimary"
                    app:errorEnabled="true">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/obra_telefone2_editTxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Telefone2"/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:counterEnabled="true"
                    app:counterMaxLength="12"
                    app:counterTextColor="@color/colorPrimary"
                    app:errorEnabled="true">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/obra_telefone3_editTxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Telefone3"/>
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            app:cardElevation="5dp"
            app:cardCornerRadius="10dp"
            android:layout_marginBottom="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Visitas:"
                    android:paddingLeft="5dp"
                    android:textSize="20sp"
                    android:textColor="@color/colorAccent"
                    android:background="@color/colorPrimary"/>
                <ExpandableListView
                    android:id="@+id/obra_expandable_listWw"
                    android:layout_width="match_parent"
                    android:layout_height="500dp"
                    android:divider="@color/colorPrimary"
                    android:childDivider="@color/colorPrimary"
                    android:dividerHeight="1dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>